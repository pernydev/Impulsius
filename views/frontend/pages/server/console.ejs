<!doctype html>
<%- include('../../components/head'); %>
  <html lang="en" dir="ltr">

    <body class="vertical-layout vertical-menu-modern dark-layout 2-columns  navbar-sticky footer-static  " data-open="click" data-menu="vertical-menu-modern" data-col="2-columns" data-layout="dark-layout">
    <div class="page">  
      <div class="page-main">
        <%- include('../../components/nav'); %>
        <%- include('../../components/servermenu') %>
             <div class="my-3 my-md-5">
              <div class="container">
                <div class="page-header">
                  <h1 class="page-title">
                    Console
                  </h1>
                </div>
                <div class="container">
                  <div class="row justify-content-center">
                    <div class="col-8">

                      <div class="card">
                        <div class="card-body">
                          <h3 class="card-title">
                            <center><i class="fas fa-server"></i>
                              <%= server.name %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  Online
                            </center>
                          </h3>
                          <p>
                            <center><i class="fas fa-memory"></i>
                              <%= server.ramUsed %>/<%= server.ramAvl %> MB &nbsp;&nbsp;&nbsp; <i
                                    class="fas fa-microchip"></i>
                                  <%= server.cpuUsed %>/<%= server.cpuAvl %>% &nbsp;&nbsp;&nbsp; <i
                                        class="fas fa-save"></i>
                                      <%= server.diskUsed %>/<%= server.diskAvl %> MB
                            </center>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row justify-end">
                    <div class="col-12 scroll">
                      <div class="card">
                        <div class="card-body">
                          <%- include('../../demo/console'); %>
                            <br>
                        </div>
                      </div>
                    </div>
                  </div>
                  <br>
                  <div class="row justify-content-around">
                    <div class="col-8">
                      <div class="input-group mb-3">
                        <span class="input-group-text" style="background-color:transparent; border: 0; box-shadow: none;">$</span>
                        <input type="text" placeholder="Send command" class="form-control"  autocomplete="off">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
      </div>
    </div>
    </div>
  </body>

  </html>